---
import { ViewTransitions, fade, slide } from "astro:transitions";
import Header from "../components/Header.astro";
import MyFooter from "../components/MyFooter.astro";
const { pageTitle, navIndex } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header myIndex={navIndex} />

    <h1
      transition:animate={slide({ duration: "1s" })}
      class="text-3xl text-center"
    >
      {pageTitle}
    </h1>
    <slot />
    <MyFooter myUrl="astro.build" />
  </body>
</html>
